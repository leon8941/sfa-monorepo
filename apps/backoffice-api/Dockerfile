# Run the container with `docker run -p 3000:3000 -t backoffice-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system backoffice-api && \
          adduser --system -G backoffice-api backoffice-api

COPY dist/apps/backoffice-api backoffice-api
RUN chown -R backoffice-api:backoffice-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix backoffice-api --omit=dev -f install

CMD [ "node", "backoffice-api" ]
